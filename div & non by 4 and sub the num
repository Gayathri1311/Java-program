import java.util.*;
class Main
{
    public static void main(String args[])
    {
        Scanner obj=new Scanner(System.in);
        int n=obj.nextInt();
        int m=obj.nextInt();
        int val1=0,val2=0;
        for(int i=1;i<=m;i++)
        {
        if(i%n==0)
        {
            val1+=i;
        }
        else
        {
            val2+=i;
        }
        }
        System.out.print(Math.abs(val1-val2));
        
        
    }
}
